# Add my bin folders to PATH

PATH=$(paste -d ":" -s << EOF
$PATH
$HOME/.gem/ruby/2.4.0/bin
$HOME/.rubies/ruby-2.4.0/bin
$HOME/chruby-0.3.9/bin
$HOME/dotfiles/scripts
/usr/share/elasticsearch/bin
/usr/local/heroku/bin
/usr/local/sbin
/usr/local/bin
/usr/sbin
/usr/bin
/sbin
/bin
EOF
)
typeset -U PATH

export MANPATH="/usr/local/man:$MANPATH"
export EDITOR='nvim'
# export EDITOR='subl'
# export EDITOR='atom'
export MYNVIMRC='~/.config/nvim/init.vim'
export ALTERNATE_EDITOR=""
export TERM="xterm-256color"
export SSH_KEY_PATH="~/.ssh/id_rsa"
export VIMRUNTIME="/usr/share/nvim/runtime"
export NVIMRUNTIME="/usr/share/nvim/runtime"
export PYTHONPATH='/usr/lib/llvm-3.8/lib/python2.7/site-packages'
# chruby
source /usr/local/share/chruby/chruby.sh
source /usr/local/share/chruby/auto.sh
chruby 2.4.0

#REMAP CAPS LOCK to CTRL
gsettings set org.gnome.desktop.input-sources xkb-options "['ctrl:nocaps']"



# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/base16-material.dark.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
