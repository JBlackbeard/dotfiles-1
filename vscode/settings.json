    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ],
        },
// After block yank and paste, move cursor to the end of operated text and don't override register

       {
            "before": [
                "y"
            ],
            "after": [
                "y", "`","]"
            ]
        },

        {
            "before": [
                "p"
            ],
            "after": [
                 "\"","_","d","P", "`"
            ]
        },


