[core]
  excludesfile = ~/.gitignore_global
  safecrlf = warn
  autocrlf = input
  pager = less -R -S -x4

[alias]
  a = add
  aa = add --all
  ap = add --patch
  di = diff
  ds = diff --staged
  dt = difftool --no-prompt
  ci = commit --verbose
  cim = commit --verbose --reedit-message=HEAD --reset-author
  amend = commit --amend --verbose
  co = checkout
  pl = pull
  ps = push
  pom = push origin master
  pbm = push backup master
  pod = push origin develop
  pbd = push backup develop
  rb = rebase -i HEAD~10
  st = status -sb
  br = branch
  lo = log --oneline -n 15
  lg = log --pretty=format:'%h | %cd | %an | %s' -n 15
  ls = log --stat -n 5
	lol = git log --graph --decorate --all --oneline
  g1 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  g2 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cD%C(reset) %C(bold green)(%cr)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)' --abbrev-commit
  wc = whatchanged -p --abbrev-commit --pretty=medium
  unstage = reset HEAD --
  edit = "!nvim `git ls-files -m`"
  st = status -s -b
  di = diff
  co = checkout
  ci = commit
  cp = cherry-pick
  br = branch
  l = log --oneline --decorate --graph --all
  ll = log --pretty=medium --decorate --graph --stat
  ls = log --name-only --oneline
  hist = log --pretty=format:\"%C(yellow bold)%h%Creset %C(red)%ad%Creset | %s%C(green bold)%d%Creset %C(blue)[%an]%Creset\" --graph --date=short
  fixup = commit --amend -c HEAD
  timeline = log --graph --branches --pretty=oneline --decorate
  untracked-files = ls-files -o --exclude-standard
  ignored-files = ls-files --others -i --exclude-standard
  modified-files = ls-files -m
  unstage = reset HEAD
  bl = blame -C
  amend = commit --amend --reuse-message=HEAD
  oops = reset --hard 'HEAD@{1}'
  unstage = reset HEAD --
  trust = "!sh -c 'mkdir -p .git/safe && hash -r'"
[github]
    user = drumaddict
[color]
  status = auto
  diff = auto
  ui = true

[color "branch"]
  current = red reverse
  local = blue
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red bold
  new = green
  plain = white

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[pull]
  ff = only
  rebase = false

[rebase]
  autostash = true

[branch]
  autosetuprebase = always

[push]
  default = tracking

[merge]
	tool = vimdiff

[mergetool]
  path = nvim

[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = diff_wrapper "$LOCAL" "$REMOTE"



